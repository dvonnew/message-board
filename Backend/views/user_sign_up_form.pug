extends layout 

block content 

    h1= title 

    form(method='POST' action='')
        div.form-group 
            label(for="username") User Name: 
            input#username.form-control(type='text', placeholder="Username" name="username" required=true value=(undefined===user ? '' : user.username))
            label(for="first_name") First Name: 
            input#first_name.form-control(type='text', placeholder="First Name" name="first_name" required=true value=(undefined===user ? '' : user.first_name))
            label(for='last_name') Last Name: 
            input#last_name.form-control(type="text", placeholder="Last Name" name="last_name" required=true value=(undefined===user ? '' : user.last_name))
        div.form-group 
            label(for="email") Email: 
            input#email.form-control(type="email", placeholder="Email" name="email" required=true value=(undefined===user ? '' : user.email))
        div.form-group 
            label(for="password") Password: 
            input#password.form-control(type="password" name="password" required=true value=(undefined===user ? '' : ''))
            label(for="confirm_password") Confirm Password: 
            input#confirm_password.form-control(type="password" name="confirm_password" required=true value=(undefined===user ? '' : ''))
        div.form-group 
            label(for="admin") Admin Permissions (Optional):
            input#admin.form-control(type="text" name="admin", value=(undefined===user ? '' : ''))
        button.btn.btn-primary(type='submit') Submit 
    
    if errors 
        ul 
            for err in errors 
                li!=err.msg