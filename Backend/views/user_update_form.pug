extends layout 

block content 
    h1= title 

    form(method='POST' action='')
        div.form-group 
            label(for="first_name") First Name: 
            input#first_name.form-control(type='text', placeholder="First Name" name="first_name" required=true value=(undefined===user ? '' : user.first_name))
            label(for='last_name') Last Name: 
            input#last_name.form-control(type="text", placeholder="Last Name" name="last_name" required=true value=(undefined===user ? '' : user.last_name))
            label(for="email") Email: 
            input#email.form-control(type="email", placeholder="Email" name="email" required=true value=(undefined===user ? '' : user.email))
        button.btn.btn-primary(type='submit') Submit 
    
    if errors 
        ul 
            for err in errors 
                li!=err.msg